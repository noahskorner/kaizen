{
  "private": true,
  "name": "kaizen",
  "packageManager": "npm@10.2.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "volta": {
    "node": "20.9.0",
    "npm": "10.2.2"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "dotenv -e ./packages/env/.env.development turbo run dev",
    "test": "docker-compose up -d && dotenv -e ./packages/env/.env.test -- prisma migrate dev && dotenv -e ./packages/env/.env.test turbo run test --parallel && docker-compose down",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "prettier . --write",
    "clean": "find . -type d -name 'node_modules' -exec rm -rf {} + && find . -type d -name '.turbo' -exec rm -rf {} +",
    "prisma:migrate:dev": "dotenv -e ./packages/env/.env.development -- prisma migrate dev",
    "prisma:db:push": "dotenv -e ./packages/env/.env.development -- prisma db push",
    "prisma:migrate:reset": "dotenv -e ./packages/env/.env.development -- prisma migrate reset",
    "prisma:db:seed": "dotenv -e ./packages/env/.env.development -- prisma db seed",
    "prisma:generate": "dotenv -e ./packages/env/.env.development -- prisma generate",
    "prisma:studio": "dotenv -e ./packages/env/.env.development -- prisma studio"
  },
  "prisma": {
    "schema": "packages/services/src/prisma/schema.prisma"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.23.2",
    "@babel/preset-typescript": "^7.23.2",
    "@kaizen/config": "*",
    "@types/bcrypt": "^5.0.1",
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.20",
    "@types/jest": "^29.5.7",
    "@types/node": "^20.5.2",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/supertest": "^2.0.15",
    "@types/uuid": "^9.0.6",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "dotenv": "^16.3.1",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard-with-typescript": "^39.1.1",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-n": "^16.2.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "prisma": "^5.5.2",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1",
    "turbo": "latest",
    "typescript": "^4.5.2"
  },
  "dependencies": {
    "@kaizen/core": "*",
    "@kaizen/env": "*",
    "@kaizen/services": "*",
    "@prisma/client": "^5.5.2",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "react": "^18.2.0",
    "uuid": "^9.0.1"
  }
}
