{
  "private": true,
  "name": "kaizen",
  "packageManager": "npm@10.2.2",
  "workspaces": [
    "apps/api",
    "apps/blog",
    "apps/frontend",
    "packages/**"
  ],
  "volta": {
    "node": "20.9.0",
    "npm": "10.2.2"
  },
  "prisma": {
    "schema": "apps/api/src/prisma/schema.prisma",
    "seed": "ts-node apps/api/src/prisma/seed/seed.ts"
  },
  "scripts": {
    "build": "turbo run build",
    "api:docker:build": "docker build -t $npm_config_aws_repository_id .",
    "api:docker:start": "docker run -p 3001:3001 $npm_config_aws_repository_id",
    "api:docker:login": "aws ecr get-login-password --region $npm_config_aws_region | docker login --username AWS --password-stdin $npm_config_aws_account_id.dkr.ecr.$npm_config_aws_region.amazonaws.com",
    "api:docker:tag": "docker tag $npm_config_aws_repository_id:latest $npm_config_aws_account_id.dkr.ecr.$npm_config_aws_region.amazonaws.com/$npm_config_aws_repository_id:latest",
    "api:docker:push": "docker push $npm_config_aws_account_id.dkr.ecr.$npm_config_aws_region.amazonaws.com/$npm_config_aws_repository_id:latest",
    "clean": "find . -type d \\( -name 'node_modules' -o -name '.turbo' -o -name 'dist' -o -name 'cdk.out' -o -name '.next' -o -name 'out' \\) -exec rm -rf {} +",
    "dev": "turbo run dev --filter=@kaizen/api --filter=@kaizen/frontend",
    "db:connect": "psql -h localhost -p 54320 -U kaizen_api -d kaizen",
    "db:seed": "npm run --prefix ./apps/api seed",
    "format": "prettier . --write",
    "keygen": "node -e \"console.log(require('crypto').randomBytes(32).toString('hex'))\"",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "start": "turbo run start",
    "test": "turbo run test",
    "test:e2e": "turbo run test:e2e",
    "turbo:clean": "turbo daemon clean",
    "turbo:graph": "turbo run build --graph=dependencies.png",
    "update:deps": "node ./scripts/update-dependencies.js"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.23.2",
    "@babel/preset-typescript": "^7.23.2",
    "@types/aws-lambda": "^8.10.131",
    "@types/bcrypt": "^5.0.1",
    "@types/cookie-parser": "^1.4.5",
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.20",
    "@types/jest": "^29.5.7",
    "@types/jsonwebtoken": "^9.0.4",
    "@types/node": "^20",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@types/supertest": "^2.0.15",
    "@types/uuid": "^9.0.6",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.0.1",
    "aws-cdk": "^2.118.0",
    "aws-cdk-lib": "^2.108.1",
    "constructs": "^10.3.0",
    "cypress": "^13.5.1",
    "dotenv": "^16.3.1",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.53.0",
    "eslint-config-next": "14.0.3",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard-with-typescript": "^39.1.1",
    "eslint-plugin-n": "^16.2.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "glob": "^10.3.10",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "postcss": "^8",
    "prettier": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.5.7",
    "prisma": "^5.6.0",
    "supertest": "^6.3.3",
    "tailwindcss": "^3.3.0",
    "tailwindcss-animate": "^1.0.7",
    "ts-node": "^10.9.1",
    "turbo": "^1.13.4",
    "typescript": "^5.2.2",
    "vite": "^5.0.0"
  }
}
